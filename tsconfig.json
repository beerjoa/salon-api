{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "#/*": ["src/*"],
      "#config/*": ["src/config/*"],
      "#shared/*": ["src/shared/*"],
      "#common/*": ["src/common/*"],
      "##salons/*": ["src/modules/salons/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "eslint.config.mjs",
    "commitlint.config.mjs"
  ],
}
